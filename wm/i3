#
# VARIBALES
#

# mod1 is Alt key
set $mod mod1

# vim-like keys
set $left h
set $down j
set $up k
set $right l

set $wallpaper ~/pictures/bg.jpg
set $screenshot_dir ~/pictures

set $term alacritty
set $fterm alacritty --title floatme
set $menu rofi -show drun -lines 5 --no-startup-id
set $mmenu --no-startup-id morc_menu
set $browser --no-startup-id google-chrome-stable
set $lock blurlock

#
# SETUP
#

font xft:URWGothic-Book 12
#font DroidSansMono Nerd Font 15

# needs left click to focus
focus_follows_mouse no

# layout
workspace_layout default
default_border pixel 4
#default_floating_border normal # maybe also just pixels
#new_window pixel 2
#hide_edge_borders none
gaps inner 10
gaps outer 0
#smart_gaps on
#smart_bordes on

#
# APPLICATIONS
#

bindsym $mod+space exec $menu
bindsym $mod+Return exec $term -e 'tmux'
bindsym $mod+e exec $fterm
bindsym $mod+f exec $fterm -e 'ranger'
bindsym $mod+Shift+Return exec $browser
bindsym $mod+Control+m exec $mmenu
bindsym $mod+Control+b exec $fterm -e 'bmenu'
bindsym $mod+Control+t exec xrandr --output HDMI2 --auto --left-of eDP1
bindsym $mod+Control+y exec xrandr --auto

# reload, restart and exit
bindsym $mod+Control+r reload
bindsym $mod+Control+w restart
bindsym $mod+Control+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# move to scrathpad
bindsym $mod+Shift+minus move scratchpad
# toggle scratchpad window or cycle through
bindsym $mod+minus scratchpad show

bindsym $mod+equal exec $lock

# screenshot
#bindsym $mod+0 exec grim -g "$(slurp)" $screenshot_dir/$(date +'%s_grim.png')
#bindsym $mod+9 exec grim $screenshot_dir/$(date +'%s_grim.png')
bindsym --release $mod+0 exec --no-startup-id i3-scrot -s

